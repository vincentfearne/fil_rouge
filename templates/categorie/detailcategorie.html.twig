{% extends 'base.html.twig' %}

{% block title %}Sounds Talented - Détail{% endblock %}


{% block body %}
    <br>
<div class="container mt-4">
    <div class="row">
        {% for produit in produit %}
            <div class="col-4">
                    <div class="card" style="width: 15rem;">
                        <img class="card-img-top" src="https://picsum.photos/100/150" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{ produit.prolibelle }}</h5>
                            <p class="card-text">{{ produit.prodescription }}</p>
                            <a href="{{ path('detail.produit', {'id': produit.id}) }}" class="btn btn-primary">Détail du produit</a>
                        </div>
                    </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}