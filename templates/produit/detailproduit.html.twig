{% extends "base.html.twig" %}

{% block title %}{{ produit.prolibelle }}{% endblock %}

{% block body %}
<br><br>
    <div class="container my-4">
        <div class="row blur">
            <div class="col-6">
                <img src="{{ produit.prophoto }}" width="50%">
            </div>
            <div class="row col-6 my-auto">
                    <div class="mx-auto">
                        <h1 class="mx-auto w">{{ produit.prolibelle }}</h1>
                        <section class="mt-4 mx-auto" style="color: white">{{ produit.prodescription }}</section>
                        <h3 class="mt-4 w">Prix : {{ produit.proprix }}</h3>
                    </div>
                    <div>
                        <a href="{{ path('cart_add', {id: produit.id}) }}" class="btn btn-info mt-4">Ajouter au panier</a>
                    </div>
            </div>
        </div>
    </div>

<br><br><br>
{% endblock %}


